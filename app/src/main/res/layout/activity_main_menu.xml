<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    tools:context=".MainMenuActivity">


    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="PIXEL SHOOTER"
        android:textColor="#000000"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnStartGame"
        android:layout_width="187dp"
        android:layout_height="56dp"
        android:layout_marginTop="28dp"
        android:onClick="startGame"
        android:text="Start Game"
        android:textColor="#000000"
        android:textSize="20sp"
        app:backgroundTint="#32BF38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleText" />

    <Button
        android:id="@+id/btnInstructions"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:onClick="instructionsScreen"
        android:text="Instructions"
        android:textColor="#000000"
        android:textSize="14sp"
        app:backgroundTint="#32BF38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartGame" />

    <Switch
        android:id="@+id/switchMusic"
        android:layout_width="148dp"
        android:layout_height="76dp"
        android:checked="true"
        android:onClick="playMusic"
        android:text="Music"
        android:textOff="OFF"
        android:textOn="ON"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInstructions"
        app:layout_constraintVertical_bias="0.397"
        tools:checked="true" />

</androidx.constraintlayout.widget.ConstraintLayout>